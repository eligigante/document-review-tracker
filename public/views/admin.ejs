<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="style-ni-home.css">

    <title>SLU</title>
</head>

<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <span class="overlay"></span>
        <div class="modal-box">
            <h2>Confirmation</h2>
            <h3>Are you sure you want to logout?</h3>

            <div class="buttons">
                <a class="close-btn">Cancel</a>
                <a class="logout-btn">
                    <i class='bx bx-log-out'></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
        <a href="admin.ejs" class="brand">
            <i class='bx bxs-file-find'></i>
            <span class="text">SLU</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="home_admin">
                    <i class='bx bxs-home'></i>
                    <span class="text">Home</span>  
                </a>
            </li>
            <li>
                <a href="manage_user">
                    <i class='bx bx-user-plus'></i>
                    <span class="text">Manage Users</span>
                </a>
            </li>
            <li>
                <a href="user_logs">
                    <i class='bx bx-list-ul'></i>
                    <span class="text">User Logs</span>
                </a>
            </li>
            <li>
                <a href="admin_profile">
                    <i class='bx bxs-face'></i>
                    <span class="text">Profile</span>
                </a>
            </li>
        </ul>

        <ul class="side-menu">
            <li>
                <a href="logout" class="logout">
                    <i class='bx bx-log-out'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>


    </section>
    <!-- SIDEBAR -->



    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <button class="drop-btn" id="drop-btn">
                <i class='bx bxs-bell'></i>
            </button>
            <div class="dropdown" id="dropdown">
                <div class="notify_item">
					<div class="notify_img">
						<img src="img/people.png" alt="profile_pic" style="width: 50px">
					</div>
					<div class="notify_info">
						<p>Alex commented on<span>Timeline Share</span></p>
						<span class="notify_time">10 minutes ago</span>
					</div>
				</div>
				<div class="notify_item">
					<div class="notify_img">
						<img src="img/people.png" alt="profile_pic" style="width: 50px">
					</div>
					<div class="notify_info">
						<p>Ben hur commented on your<span>Timeline Share</span></p>
						<span class="notify_time">55 minutes ago</span>
					</div>
				</div>
				<div class="notify_item">
					<div class="notify_img">
						<img src="img/people.png" alt="profile_pic" style="width: 50px">
					</div>
					<div class="notify_info">
						<p>Meryn trant liked your<span>Cover Picture</span></p>
						<span class="notify_time">2 hours ago</span>
					</div>
				</div>
				<div class="notify_item">
					<div class="notify_img">
						<img src="img/people.png" alt="profile_pic" style="width: 50px">
					</div>
					<div class="notify_info">
						<p>John wick commented on your<span>Profile Picture</span></p>
						<span class="notify_time">6 hours ago</span>
					</div>
				</div>
              </div>
            <a href="#" class="profile">
                <img src="img/people.png">
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Dashboard</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Dashboard</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="#">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Users</h3>
                        <i class='bx bx-search'></i>
                        <i class='bx bx-filter'></i>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Department ID</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(element => { %> 
                                <tr>
                                    <td><p><%= element.first_Name + ' ' + element.middle_Name.charAt(0) + '. ' + element.last_Name %></p></td> 
                                    <td><%= element.department_ID %></td>
                                    <td><span><%= element.status%></span></td>  
                                </tr>
                            <% }) %>
                            <!-- <tr>
                                <td>
                                    <p>John Doe</p>
                                </td>
                                <td>123123</td>
                                <td><span class="status online">Online</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <p>John Doe</p>
                                </td>
                                <td>321321</td>
                                <td><span class="status offline">Offline</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <p>John Doe</p>
                                </td>
                                <td>2121212</td>
                                <td><span class="status online">Online</span></td>
                            </tr> -->
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->
    <script src="../ver3/user/script.js"></script>
</body>

</html>