<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="style-ni-home.css">

    <title>AdminHub</title>
</head>

<body>
    <div class="loader-container">
        <div class="typewriter">
            <div class="slide"><i></i></div>
            <div class="paper"></div>
            <div class="keyboard"></div>
        </div>
    </div>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="home_admin" class="brand">
            <i class='bx bxs-file-find'></i>
            <span class="text">SLU</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a href="home_admin">
                    <i class='bx bxs-home'></i>
                    <span class="text">Home</span>
                </a>
            </li>
            <li class="active">
                <a href="manage _user">
                    <i class='bx bx-user-plus'></i>
                    <span class="text">Manage Users</span>
                </a>
            </li>
            <li>
                <a href="admin_profile">
                    <i class='bx bxs-face'></i>
                    <span class="text">Profile</span>
                </a>
            </li>
        </ul>

        <ul class="side-menu">
            <li>
                <a href="logout" class="logout">
                    <i class='bx bx-log-out'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>


    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#"></form>
            <a href="#" class="profile">
                <img src="img/people.png">
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Manage Users</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Manage Users</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="#">Home</a>
                        </li>
                    </ul>
                </div>
                <div class="right">
                    <a href="add_user" class="btn-add">
                        <i class='bx bx-plus'></i>
                        <span class="text">Add User</span>
                    </a>
                    <a href="edit_user" class="edit-btn">
                        <i class='bx bxs-user'></i>
                        <span class="text">Edit</span>
                    </a>
                </div>
            </div>
            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Users</h3>
                        <a href="filter_manage_online" class="sort-btn" id="filter-online-manage">
                            <i class='bx bx-filter-alt'></i>
                            <span class="text">Filter Online</span>
                        </a>
                        <a href="filter_manage_offline" class="filter-btn" id="filter-offline-manage">
                            <i class='bx bx-filter-alt'></i>
                            <span class="text">Filter Offline</span>
                          
                        </a>
                        <a href="sort_manage_ascending" class="sort-btn" id="sort-asc-manage">
                            <i class='bx bx-sort-a-z' ></i>
                            <span class="text">Sort A-Z</span>
                            
                        </a>
                        <a href="sort_manage_descending" class="sort-btn" id="sort-desc-manage">
                            <i class='bx bx-sort-z-a'></i>
                            <span class="text">Sort Z-A</span>
                        </a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Department</th>
                                <th>Role</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(element=> { %> 
                                <tr>
                                    <td><%= element.first_Name + ' ' + element.middle_Name.charAt(0) + '. ' + element.last_Name %></td> 
                                    <td><%= element.department_Name %></td>
                                    <td><%= element.role %></td>
                                    <td><span><%= element.status%></span></td>  
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->

    <script src="/script.js"></script>
</body>

</html>